[global/wm]
margin-top = 5
margin-bottom = 5

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 20
offset-x = 0
offset-y = 0
radius = 0
fixed-center = false

background = ${colors.color8}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.color8}

border-size = 5
border-bottom-size = 0
border-color = ${colors.color8}

padding-left = 0
padding-top = 10
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Terminus (TTF):pixelsize=9:weight=medium:antialias=false
font-1 = IconBitOne:pixelsize=9:weight=medium:antialias=false
font-2 = IconBitTwo:pixelsize=9:weight=medium:antialias=false

modules-left = i3 xwindow
modules-center = date
modules-right = filesystem xbacklight volume memory cpu wlan eth battery temperature powermenu

tray-position = right
tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
;format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 5
label-mode-foreground = ${colors.color8}
label-mode-background = ${colors.color8}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.color8}
label-focused-underline = ${colors.color7}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${colors.color8}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.color8}
label-urgent-underline = ${colors.color1}
label-urgent-padding = ${self.label-focused-padding}

label-mode-font = 1
label-visible-font = 3
label-focused-font = 3
label-unfocused-font = 3
label-urgent-font = 3

ws-icon-default = 6
ws-icon-0 = 1;S
ws-icon-1 = 2;s
ws-icon-2 = 3;u
ws-icon-3 = 4;N
ws-icon-4 = 5; 　 

[module/mpd]
type = internal/mpd
